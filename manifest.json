{
  "manifest_version": 3,
  "name": "DeepDiver",
  "version": "0.1.0",
  "description": "Extract and enrich public info from LinkedIn and X profiles using free sources.",
  "permissions": ["scripting", "storage", "activeTab", "tabs"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.twitter.com/*",
    "https://api.github.com/*",
    "https://query.wikidata.org/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "DeepDiver"
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*", "https://www.linkedin.com/pub/*"],
      "js": ["content-scripts/linkedin.js"]
    },
    {
      "matches": ["https://twitter.com/*", "https://mobile.twitter.com/*", "https://x.com/*"],
      "js": ["content-scripts/x.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
